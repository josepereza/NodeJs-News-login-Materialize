<div class="form container">
    <div class="row form-signup-container">
        <div class="col s12 m12 l8 offset-l2">
            <form action="/signup" method="POST" class="form-signup" id="form_signup">
                <h3 class="title-signup">Sign Up Form</h3>
                <div class="input-field">
                    <input type="text" name="firstname" class="form-control" id="input_firstname_signup">
                    <label for="input_firstname_signup">First name: </label>
                </div>
                <div class="input-field">
                    <input type="text" name="lastname" class="form-control" id="input_lastname_signup">
                    <label for="intput_lastname_signup">Last name: </label>
                </div>
                <div class="input-field">
                    <input type="text" name="username" class="form-control" id="input_username_signup">
                    <label for="input_username_signup">Username: </label>
                </div>
                <div class="input-field">
                    <input type="password" name="password" class="form-control" id="input_password_signup">
                    <label for="input_password_signup">Password: </label>
                </div>
                <div class="input-field  btn-container">
                    <a href="/signin" class="btn btn-primary">
                        Go to sign in
                    </a>
                    <button class="btn btn-success" id="btn_submit_signup">
                        Contiue
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>